## Makefile day10
## File description:
## Will compile our project
##

NAME 	=	lib_test

SRC	=	main.cpp		\
		game.cpp		\
		game.hpp		\
		IGame.hpp		\
		sdlLib.cpp		\
		sdlLib.hpp		\
		IGfx.hpp		\

SRC_UNIT	=

OBJ	=	$(SRC:.c=.o)

OBJ_TEST =	$(SRC_UNIT:.c=.o)

CFLAGS	=

LDFLAGS =	-Wall -Wextra -lSDL2main -lSDL2 -lSDL2_image

all:	$(NAME)

$(NAME): $(OBJ)
	g++ -o $(NAME) $(OBJ) $(LDFLAGS)

clean:
	rm -rf *.o

fclean:	clean
	rm -f $(NAME)

re: fclean all

tests_run:
	rm -f *.gcda
	rm -f *.gcno
	gcc -o unit_tests $(OBJ_TEST) tests/test_bistro.c --coverage -lcriterion
	./unit_tests

tests_clean:
	rm -f *.gcda
	rm -f *.gcno
